// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    email     String
    cpf       String
    phone     String
    pass      String
    address   Address? @relation(fields: [addressId], references: [id])
    addressId String?
}

model Address {
    id           String @id @default(uuid())
    cep          Int
    streetName   String
    streetNumber Int?
    county       String
    state        String
    countryCode  String
    User         User[]
}
