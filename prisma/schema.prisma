generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    email     String
    cpf       String
    phone     String
    pass      String
    name      String?
    address   Address? @relation(fields: [addressId], references: [id])
    addressId String?
}

model Address {
    id           String @id @default(uuid())
    cep          Int
    streetName   String
    streetNumber Int?
    county       String
    state        String
    Lat          Float  @default(10)
    Lng          Float  @default(10)
    countryCode  String
    User         User[]
}
